# --- Azure OpenAI Core Credentials ---
AZURE_OPENAI_API_KEY=your_azure_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_API_VERSION=2024-12-01-preview

# --- Tiered Deployment Names ---
# TIER 1: The Supervisor (Fast/Cheap - e.g., gpt-4o-mini)
AZURE_DEPLOYMENT_NAME_MINI=your_mini_deployment_name

# TIER 2: The Workers (High-Reasoning - e.g., gpt-4o)
AZURE_DEPLOYMENT_NAME_GPT4=your_gpt4_deployment_name

# TIER 3: The Embeddings (For Vector RAG - e.g., text-embedding-3-small)
AZURE_DEPLOYMENT_NAME_EMBEDDINGS=your_embedding_deployment_name

# --- Observability & Traceability ---
# Set to "true" only if you want to log to LangSmith
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=your_langsmith_key_here
LANGCHAIN_PROJECT=DataLens_v6
